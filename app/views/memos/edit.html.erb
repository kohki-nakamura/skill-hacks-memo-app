<h4>edit memo</h4>
<%= form_tag("/memos/"+@memo.id.to_s, :method=>:patch) do %>
  <div class="form-group">
    <label class="form-title">Title</label>
    <%= text_field :memos, :title, class:"form-control", value:@memo.title %>
  </div>
  <div class="form-group">
    <label class="form-content">Content</label>
    <%= text_field :memos, :content, class:"form-control", value:@memo.body %>
  </div>
  <div class="form-group">
    <label class="form-category">Category</label>
    <%= select_tag "memos[category_id]", options_from_collection_for_select(@categories, :id, :name, @memo.category_id), class:"form-control" %>
  </div>
  <%= submit_tag "Update", :class=>"btn btn-primary" %>
<% end %>