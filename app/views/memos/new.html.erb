<h4>create memo</h4>
<%= form_tag("/create") do %>
  <div class="form-group">
    <label class="form-title">Title</label>
    <%= text_field :memos, :title, class:"form-control", placeholder:"Title" %>
  </div>
  <div class="form-group">
    <label class="form-content">Content</label>
    <%= text_field :memos, :content, class:"form-control", placeholder:"Content" %>
  </div>
  <div class="form-group">
    <label class="form-category">Category</label>
    <%= select_tag "memos[category_id]", options_from_collection_for_select(@categories, :id, :name), class:"form-control" %>
  </div>
  <%= submit_tag "Create", :class=>"btn btn-primary" %>
<% end %>